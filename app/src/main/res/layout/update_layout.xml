<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_main"
        android:layout_marginBottom="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <!--   <ImageView
                  android:id="@+id/user_pic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:background="@drawable/profile_login" />
   -->
            <ImageView
                android:id="@+id/cust_picture"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/login_subtitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Upload photo"
                android:textColor="#4799E8" />

            <EditText
                android:id="@+id/editTextfullname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Full Name"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textCapSentences"
                />

            <EditText
                android:id="@+id/editTextemail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Email"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <EditText
                android:id="@+id/editTextPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Password"

                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Phone"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextProfesion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Proffesion"

                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Address"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextdescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:editable="true"
                android:ems="10"
                android:hint="Descripation"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:inputType="textCapSentences"/>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/update_cust"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
